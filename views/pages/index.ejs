<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather App</title>

    <%- include('../components/head.ejs') %>

    <style>
        * {
            font-family: "Poppins";
        }

        body {
            background-image: url("/images/background.jpg");
            background-size: cover;
        }
    </style>
</head>
<body class="bg-light">
    <%- include('../components/navbar.ejs') %>

    <div class="container">
        <div class="display-0 text-dark">Weather App</div>
        
        <form action="/search" method="POST">
            <small class="text-dark fw-semibold">Enter the city name:</small>
            <div class="d-flex justify-content-between">
                <div class="form-group col-md-10 col-8">
                    <input type="text" class="form-control p-3" id="city" name="city" placeholder="Astana" />
                </div>
                <button type="submit" class="btn btn-primary col-md-2 col-4">Submit</button>
            </div>
        </form>
    </div>

    <%- include('../components/footer.ejs') %>

    <% if (error) { %>
        <script>
            Swal.fire({
                title: "An error occured!",
                text: "City was not found.",
                icon: "error"
            });
        </script>
    <% } %>

    
</body>
</html>